# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# DigitalOcean Configuration
digitalocean_region = "nyc1"
digitalocean_node_size = "s-1vcpu-2gb"
digitalocean_node_count = 1
digitalocean_auto_scale = true
digitalocean_min_nodes = 1
digitalocean_max_nodes = 3
container_registry_tier = "basic"

# Application Configuration
image_tag = "latest"
# database_url is read from DATABASE_URL environment variable

# Logging Configuration
enable_debug_logging = true
enable_trace_logging = false

# Kubernetes Configuration
k8s_replicas = 1
k8s_environment_variables = {
  # Add any additional environment variables here
  # BASE_URL = "https://dev.planning-poker.hyperchad.dev"
}

# Resource Limits
k8s_cpu_request = "100m"
k8s_memory_request = "128Mi"
k8s_cpu_limit = "500m"
k8s_memory_limit = "512Mi"

# SSL/TLS
cert_manager_issuer = "letsencrypt-prod"

# Auto-scaling (optional)
enable_hpa = false
hpa_min_replicas = 1
hpa_max_replicas = 5
hpa_cpu_target = 70
hpa_memory_target = 80